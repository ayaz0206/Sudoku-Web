<html>
<head>
  <title>Sudoku Game</title>   
  <!-- link to the CSS stylesheet -->
  <link href="/stylesheets/reset.css" rel="stylesheet" type="text/css">
  <link href="/stylesheets/application.css" rel="stylesheet" type="text/css">
</head>
<body>
<h1>~ Life is too short for playing Sudoku ~</h1>
<div id="flash">
<%= flash[:notice] %>
</div>
<div id="sudoku">
		<form action="/" method="post">
  <!-- </form>	 -->
  <!-- one div for each row -->
  <% 3.times do |row| %>
    <div class='row'>
        <!-- Separate div elements for boxes to style them using CSS -->
      <% 3.times do |box| %>
          <div class="box">
         <!-- each box will have nine cells -->
         <% 3.times do |cell_row| %>
              <div class="cell-row">
             <% 3.times do |cell| %>
             		<%= partial :cell, :locals=>{:cell_index => row * 27 + box * 3 + cell_row * 9 + cell} %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

  <form action="/" method="post" class="button">
 		<button>Check</button>
 		</form>
   
   <form action="/solution" method="get" class="button">
   	<button>Get Solution</button>
   	</form>
   
   <form action="/restart" method="get" class="button">
   	<button>Start a New Game</button>
   </form>


   
  </div>
  <footer>Ayaz G. @Makers Academy - January 2014.</footer>
</body>
</html>

